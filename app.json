{
  "expo": {
    "owner": "lapinlearn",
    "name": "lapinlearn",
    "slug": "lapinlearn",
    "version": "1.0.1.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F9F7F7"
    },
    "ios": {
      "config": {
        "usesNonExemptEncryption": false
      },
      "googleServicesFile": "./GoogleService-Info.plist",
      "supportsTablet": true,
      "infoPlist": {
        "CFBundleName": "Lapin Learn",
        "CFBundleAllowMixedLocalizations": true,
        "ExpoLocalization_supportsRTL": false
      },
      "bundleIdentifier": "com.datn.lapinlearn"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#F9F7F7"
      },
      "googleServicesFile": "./google-services.json",
      "permissions": ["android.permissions.READ_MEDIA_AUDIO", "android.permissions.ACCESS_NETWORK_STATE"],
      "package": "com.datn.lapinlearn",
      "versionCode": 1000101
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "locales": {
      "en": "./locales/en/english.json",
      "vi": "./locales/vi/vietnamese.json"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      "expo-secure-store",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "./lib/plugins/withPodfile"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "supportsRTL": false,
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "78d04b86-59b5-4045-b3c7-96ca573b662f"
      }
    }
  }
}
