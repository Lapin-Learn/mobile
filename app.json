{
  "expo": {
    "owner": "lapinlearn",
    "name": "LapinLearn",
    "slug": "lapinlearn",
    "version": "1.2.2",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "lapinlearn",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F9F7F7"
    },
    "ios": {
      "usesAppleSignIn": true,
      "requireFullScreen": true,
      "entitlements": {
        "aps-environment": "production"
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "googleServicesFile": "./GoogleService-Info.plist",
      "supportsTablet": false,
      "infoPlist": {
        "CFBundleName": "Lapin Learn",
        "CFBundleAllowMixedLocalizations": true,
        "ExpoLocalization_supportsRTL": false
      },
      "bundleIdentifier": "com.datn.lapinlearn"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#F9F7F7"
      },
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permissions.READ_MEDIA_AUDIO",
        "android.permissions.ACCESS_NETWORK_STATE",
        "android.permissions.POST_NOTIFICATIONS",
        "android.permissions.READ_MEDIA_IMAGES"
      ],
      "package": "com.datn.lapinlearn",
      "versionCode": 1000208
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "locales": {
      "en": "./locales/en/english.json",
      "vi": "./locales/vi/vietnamese.json"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      "expo-secure-store",
      "expo-apple-authentication",
      "@react-native-firebase/app",
      "@react-native-firebase/crashlytics",
      "@react-native-firebase/auth",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "kotlinVersion": "1.8.0"
          },
          "ios": {
            "useFrameworks": "static",
            "deploymentTarget": "14.0"
          }
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "PORTRAIT"
        }
      ],
      "./lib/plugins/withPodfile"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "supportsRTL": false,
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "78d04b86-59b5-4045-b3c7-96ca573b662f"
      }
    }
  }
}
